<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Biblioteca</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <style>
        body {
            display: flex;
            min-height: 100vh;
            background-color: #f4f6f9;
            font-family: 'Arial', sans-serif;
        }

        /* Sidebar */
        .sidebar {
            width: 280px;
            height: 100vh;
            background: #203154;
            color: white;
            padding: 20px;
            position: fixed;
            display: flex;
            flex-direction: column;
            box-shadow: 3px 0 10px rgba(0, 0, 0, 0.2);
        }

            .sidebar h2 {
                text-align: center;
                font-weight: bold;
                margin-bottom: 20px;
            }

            .sidebar .greeting {
                text-align: center;
                font-size: 18px;
                margin-bottom: 10px;
                font-weight: bold;
            }

            .sidebar .time {
                text-align: center;
                font-size: 16px;
                margin-bottom: 20px;
                font-weight: normal;
            }

            .sidebar a {
                color: white;
                text-decoration: none;
                display: block;
                padding: 12px;
                border-radius: 8px;
                transition: background 0.3s ease;
                font-size: 16px;
            }

                .sidebar a:hover {
                    background: rgba(255, 255, 255, 0.2);
                }

            .sidebar .logout {
                margin-top: auto;
                background: #d9534f;
                text-align: center;
                padding: 12px;
                border-radius: 8px;
            }

                .sidebar .logout:hover {
                    background: #c9302c;
                }

        .content {
            margin-left: 300px;
            padding: 30px;
            flex-grow: 1;
            width: 100%;
        }
    </style>
</head>

<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h2>🏎️Gestión autos🏁</h2>
        <div class="greeting">Bienvenido!</div>
        <div class="time" id="current-time"></div>
        <a href="/"><i class="fa-solid fa-house"></i> Inicio</a>
        <a href="/Usuario"><i class="fa-solid fa-users"></i> Usuarios</a>
        <a href="/Rol"><i class="fa-solid fa-user-shield"></i> Roles</a>
        <a href="#" class="logout"><i class="fa-solid fa-sign-out-alt"></i> Cerrar sesión</a>
    </div>

   
    <div class="content">
        <div class="container">
            <div>
                @RenderBody() 
            </div>
        </div>
    </div>

    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        function updateTime() {
            const now = new Date();
            const timeString = now.toLocaleTimeString('es-ES', { hour: '2-digit', minute: '2-digit', second: '2-digit' });
            document.getElementById("current-time").textContent = timeString;
        }

        setInterval(updateTime, 1000);
        updateTime(); 
    </script>
</body>
</html>
