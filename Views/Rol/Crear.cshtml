@model Bibloteca.Models.Domain.Rol

@{
    ViewData["Title"] = "Crear Rol";
    Layout = "_LayoutDashboard";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-md-6">
        <div class="card border shadow-lg rounded-3 mb-5">
            <div class="card-header bg-primary text-white text-center py-3">
                <h2 class="fw-bold mb-0"><i class="bi bi-plus-circle"></i> Crear Nuevo Rol</h2>
            </div>

            <div class="card-body p-4">
                <form asp-action="Crear">
                    <div class="mb-3">
                        <label class="form-label fw-bold">Nombre del Rol</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre del rol" required />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-check-circle"></i> Guardar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg ms-2">
                            <i class="bi bi-arrow-left-circle"></i> Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
