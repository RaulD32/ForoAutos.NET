@using Bibloteca.Models.Domain;
@model Usuario

@{
    Layout = "_LayoutDashboard";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="col-md-6">
        <div class="card border shadow-lg rounded-3 mb-4">
            <div class="card-header bg-primary text-white text-center py-3">
                <h2 class="fw-bold mb-0"><i class="bi bi-pencil-square"></i> Editar Usuario</h2>
            </div>

            <div class="card-body p-4">
                <form asp-action="Editar" method="post">
                    <input asp-for="PkUsuario" type="hidden" />

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label fw-bold">Nombre</label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingresa el nombre" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label fw-bold">Usuario</label>
                        <input asp-for="UserName" class="form-control" placeholder="Ingresa el usuario" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label fw-bold">Contraseña</label>
                        <input asp-for="Password" type="password" class="form-control" placeholder="Ingresa la contraseña" required />
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">Rol</label>
                        <select asp-for="FkRol" asp-items="ViewBag.Roles" class="form-select">
                            <option value="">-- Selecciona --</option>
                        </select>
                    </div>

                    <div class="text-center mt-4">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="bi bi-save"></i> Guardar
                        </button>
                        <a asp-controller="Usuario" asp-action="Index" class="btn btn-secondary btn-lg ms-2">
                            <i class="bi bi-arrow-left-circle"></i> Volver
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
