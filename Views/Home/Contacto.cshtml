@{ ViewData["Title"] = "Contacto"; }

<style>
    .banner-container {
        width: 100vw; /* Ocupa todo el ancho de la pantalla */
        height: 350px; /* Ajusta la altura según lo necesites */
        overflow: hidden;
        display: flex; /* Asegura que la imagen se centre */
        justify-content: center;
        align-items: center;
    }

    .banner-image {
        width: 100%; /* Hace que la imagen cubra todo el ancho del contenedor */
        height: 100%;
        object-fit: cover; /* Ajusta la imagen sin deformarla */
    }
</style>

@* <div class="banner-container">
    <img src="~/images/R8.png" class="banner-image" alt="Contacto">
</div> *@

<div class="container mt-5">
    <div class="text-center mb-5">
        <h1 class="fw-bold">Contacto</h1>
        <p class="text-muted">Estamos aquí para ayudarte. Contáctanos a través de los siguientes medios.</p>
    </div>
    
    <div class="row g-4">
        <!-- Información de contacto -->
        <div class="col-lg-6">
            <div class="card shadow-lg p-4 border-0">
                <h3 class="mb-3">Teléfonos</h3>
                <ul class="list-unstyled">
                    <li><strong>Atención al Cliente:</strong> +1 (555) 123-4567</li>
                    <li><strong>Soporte Técnico:</strong> +1 (555) 987-6543</li>
                </ul>

                <h3 class="mt-4 mb-3">Redes Sociales</h3>
                <div class="d-flex gap-3">
                    <a href="https://facebook.com" target="_blank" class="btn btn-primary">Facebook</a>
                    <a href="https://twitter.com" target="_blank" class="btn btn-info">Twitter</a>
                    <a href="https://instagram.com" target="_blank" class="btn btn-danger">Instagram</a>
                </div>
            </div>
        </div>

        <!-- Preguntas Frecuentes -->
        <div class="col-lg-6">
            <div class="card shadow-lg p-4 border-0">
                <h3 class="mb-3">Preguntas Frecuentes</h3>
                <div class="accordion" id="faqAccordion">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingOne">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne">
                                ¿Cómo puedo contactar con soporte?
                            </button>
                        </h2>
                        <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Puedes llamarnos al número de soporte o enviarnos un mensaje a través de nuestras redes sociales.
                            </div>
                        </div>
                    </div>

                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingTwo">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo">
                                ¿Cuál es el horario de atención?
                            </button>
                        </h2>
                        <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                            <div class="accordion-body">
                                Nuestro horario de atención es de lunes a viernes, de 9:00 a 18:00 hrs.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
